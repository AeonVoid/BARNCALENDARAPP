<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.BARN"
        versionCode = "10"
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>BARN Events and Classes</name>

    <description>
        Classes and events for the Bainbridge Artisan Resource Network.
    </description>

    <author href="https://build.phonegap.com" email="rhain.zipeto@hotmail.com">
        Rhain Zipeto
    </author>

    <access origin="https://bainbridgebarn.wildapricot.org/Kitchen-Arts-events/RSS" />
    <access origin="https://bainbridgebarn.wildapricot.org/eta-upcoming/RSS" />
    <access origin="https://bainbridgebarn.wildapricot.org/Fiber-Arts/RSS" />
    <access origin="https://bainbridgebarn.wildapricot.org/jfm-upcoming/RSS" />
    <access origin="https://bainbridgebarn.wildapricot.org/print-events/RSS" />
    <access origin="https://bainbridgebarn.wildapricot.org/Upcoming-Metal-Machining-Events/RSS" />
    <access origin="https://bainbridgebarn.wildapricot.org/Book-Arts/RSS" />
    <access origin="https://bainbridgebarn.wildapricot.org/Upcoming-glass-events/RSS" />
    <access origin="https://bainbridgebarn.wildapricot.org/Woodworking/RSS" />
    <access origin="https://bainbridgebarn.wildapricot.org/Upcoming-writing-events/RSS" />

    <icon src="../icons/barntag.jpg" platform="android" qualifier="ldpi" />
    <icon src="../icons/barntag.jpg" platform="android" qualifier="mdpi" />
    <icon src="../icons/barntag.jpg" platform="android" qualifier="hdpi" />
    <icon src="../icons/barntag.jpg" platform="android" qualifier="xhdpi" />
    <icon src="../icons/barntag.jpg" platform="android" qualifier="xxhdpi" />
    <icon src="../icons/barntag.jpg" platform="android" qualifier="fr-xxhdpi" />

    <preference name="permissions"             value="none"/>

    <preference name="orientation"             value="portrait"/>
    <preference name="target-device"           value="universal"/>
    <preference name="fullscreen"              value="true"/>
    <preference name="webviewbounce"           value="true"/>
    <preference name="exit-on-suspend"         value="false"/>
    <preference name="android-installLocation" value="auto"/>

    <platform name="android"/>

</widget>
